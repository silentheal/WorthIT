@model WorthIt.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="by-margin-screen row">
    @using (Html.BeginForm())
    {
        <div class="cold-md-5 col-sm-5 col-xs-12">
            <h2>Register</h2>
            <div class="register-form">
                <form class="form-horizontal">
                    <div class="form-group register-form-group">
                        @Html.AntiForgeryToken()
                        @Html.LabelFor(x => x.EmailAddress, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.EmailAddress)
                        </div>
                    </div>
                    <div class="form-group register-form-group">
                        @Html.LabelFor(x => x.Password, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                    </div>
                    <div class="form-group register-form-group">
                        @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ConfirmPassword)
                        </div>
                    </div>

                    <div class="col-sm-offset-3 col-sm-9">
                        <br />
                        <input type="submit" value="Resigter" class="btn btn-primary btn-lg" />
                    </div>
                    <div class="register-moveto-login">
                        <br />
                        <p>----- Already Signed? @Html.ActionLink("Log in", "login", "account") here -----</p>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-7 col-sm-7">
            <div class="register-image-div">
                 <img src="~/Content/images/register-stuff.jpg" class="register-image" />
            </div>
            <div class="register-text-group">
                <h1>Join us</h1>
                <h3>More than 3,000 upcycle Items waiting for you</h3>
            </div>
        </div>
    }
</div>