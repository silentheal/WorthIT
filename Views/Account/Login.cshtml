@model WorthIt.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<div class="by-margin-screen row">
    @using (Html.BeginForm())
    {
        <div class="cold-md-5 col-sm-5 col-xs-12">
            <h2>Log in</h2>
            <div class="register-form">
                <form class="form-horizontal">
                    <div class="form-group register-form-group">
                        @Html.AntiForgeryToken()
                        @Html.LabelFor(x => x.EmailAddress, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.EmailAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.EmailAddress)
                        </div>
                    </div>
                    <div class="form-group register-form-group">
                        @Html.LabelFor(x => x.Password, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                    </div>

                    <div class="col-sm-offset-3 col-sm-9">
                        <input type="checkbox" />Remember me
                        @Html.ActionLink("Forgot Password?", "", "", new { @class = "pull-right" })
                    </div>

                    <div class="col-sm-offset-3 col-sm-9">
                        <br />
                        <input type="submit" value="Log in" class="btn btn-primary btn-lg" />
                    </div>
                    
                    <div class="register-moveto-login">
                        <br />
                        <p> ----- Not member yet? @Html.ActionLink("Sign up", "register", "account") here -----</p>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-7 col-sm-7">
            <div class="register-image-div">
                <img src="~/Content/images/Apartment-Therapy-Bathtub-Sofa.jpg" class="register-image" />
            </div>
            <div class="register-text-group">
                <h1>How are you Today?</h1>
                <h3>Find new and unique items</h3>
            </div>
        </div>
    }
</div>